{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./typings", "@types/*"],
    "paths": {
      "*": ["@types/*", "node_modules/*"]
    },
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "allowJs": true
  }
}
